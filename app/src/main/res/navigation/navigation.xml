<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/fragment_search">

    <fragment
        android:id="@+id/fragment_search"
        android:name="com.nikialeksey.interview.imagesearch.search.Fragment"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_show_image"
            app:destination="@id/fragment_show" />

    </fragment>

    <fragment
        android:id="@+id/fragment_show"
        android:name="com.nikialeksey.interview.imagesearch.show.Fragment"
        tools:layout="@layout/fragment_show" />

</navigation>